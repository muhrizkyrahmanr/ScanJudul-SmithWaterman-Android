<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12.0dip"
    android:layout_marginTop="4.0dip"
    android:layout_marginRight="12.0dip"
    android:layout_marginBottom="10dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:padding="16.0dip"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="11.0sp"
            android:textColor="@color/blackThema"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JUDUL"
            android:textAllCaps="true"
            android:fontFamily="sans-serif" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_judul"
                android:textSize="15.0sp"
                android:textStyle="bold"
                android:textColor="@color/blackThema"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Skripsi"
                android:fontFamily="sans-serif" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="14.0sp"
                android:textColor="@color/blackThema"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tahun "
                android:fontFamily="sans-serif" />
            <TextView
                android:id="@+id/tv_tahun"
                android:textSize="14.0sp"
                android:textStyle="bold"
                android:textColor="@color/blackThema"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018"
                android:fontFamily="sans-serif" />
            <TextView
                android:textSize="14.0sp"
                android:textColor="@color/blackThema"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No.Buku "
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif" />
            <TextView
                android:id="@+id/tv_no_buku"
                android:textSize="14.0sp"
                android:textStyle="bold"
                android:textColor="@color/blackThema"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="sans-serif" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="2.0">
            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">
                <TextView
                    android:textSize="11.0sp"
                    android:textColor="@color/blackThema"
                    android:ellipsize="end"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.0dip"
                    android:text="NAMA MAHASISWA"
                    android:layout_centerHorizontal="true"
                    android:textAllCaps="true"
                    android:fontFamily="sans-serif" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_nama_mahasiswa"
                        android:textSize="14.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/blackThema"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mahasiswa"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_kemiripan_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10.0dip"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:gravity="right"
                    android:text="Kemiripan"
                    android:textAllCaps="true"
                    android:textColor="@color/blackThema"
                    android:textSize="11.0sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_kemiripan_angka"
                        android:textSize="30.0sp"
                        android:textStyle="bold"
                        android:textColor="@color/blackThema"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="80%"
                        android:fontFamily="sans-serif" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/view_garis"
            android:background="#ECDBDB"
            android:layout_width="match_parent"
            android:layout_height="1.50dip"
            android:layout_marginTop="4.0dip"
            android:layout_marginBottom="4.0dip" />
        <TextView
            android:id="@+id/tv_kalimat_mirip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="@color/blackThema"
            android:textAppearance="@android:style/TextAppearance.Small" />
    </LinearLayout>
</androidx.cardview.widget.CardView>