<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">
    <com.google.android.material.appbar.AppBarLayout
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/app_bar_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:layout_collapseMode="pin">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_collapseMode="pin">
                <RelativeLayout
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="?actionBarSize">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/photoUser"
                        android:layout_width="40.0dip"
                        android:layout_height="fill_parent"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        card_view:civ_border_color="@color/backgroundTab2"
                        card_view:civ_border_width="1.0dip" />
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="12.0dip"
                        android:layout_marginRight="12.0dip"
                        android:layout_toRightOf="@id/photoUser">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:textSize="11.0sp"
                                android:textColor="@color/white"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stambuk "
                                android:maxLines="1"
                                android:fontFamily="sans-serif" />
                            <TextView
                                android:id="@+id/tv_stambuk"
                                android:textSize="11.0sp"
                                android:textColor="@color/white"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:maxLines="1"
                                android:fontFamily="sans-serif" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:textSize="14.0sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:id="@+id/tv_nama"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-2.0dip"
                                android:text="Nama"
                                android:maxLines="1"
                                android:fontFamily="sans-serif-light" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_marginRight="12.0dip"
            android:orientation="horizontal">
            <EditText
                android:drawablePadding="8dp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_search_gray_24dp"
                android:textColor="@color/blackThema"
                android:hint="Masukkan judul skripsi anda"
                android:background="@drawable/search_input_style"
                android:id="@+id/et_judul"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:singleLine="true"
                android:inputType="textCapCharacters"
                android:textColorHint="#757575"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_gambar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/app_bar_layout"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_marginBottom="12.0dip">
        <include layout="@layout/activity_judul"/>
    </LinearLayout>

</RelativeLayout>